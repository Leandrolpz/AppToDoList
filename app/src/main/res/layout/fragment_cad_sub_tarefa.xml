<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.CadSubTarefaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_st"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tv_titulo_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/exemplo" />

        <TextView
            android:id="@+id/tv_add_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/exemplo" />
        <EditText
            android:id="@+id/et_nome_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_img_sub"
        app:layout_constraintTop_toBottomOf="@+id/linear_st"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_sub"
            android:layout_width="match_parent"
            android:layout_height="640dp"
            android:src="@drawable/ic_launcher_foreground"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>