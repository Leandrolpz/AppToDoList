<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:id="@+id/linear_tarefa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/cinza_tarefa">

        <TextView
            android:id="@+id/tv_nome_tarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exemplo" />

        <TextView
            android:id="@+id/tv_data_tarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exemplo"
            android:layout_margin="5dp"
            />

        <TextView
            android:id="@+id/tv_part_descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exemplo"
            android:layout_margin="5dp"
            />

        <TextView
            android:background="@color/verde_finalizada"
            android:id="@+id/tv_status_tarefa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exemplo"
            android:textAlignment="center"
            android:layout_margin="10dp"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>